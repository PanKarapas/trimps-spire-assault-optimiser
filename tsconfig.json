{
  "compilerOptions": {
    "rootDir": "./src",

    "module": "nodenext",
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "types": [],
  
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

  },
  "include": ["./src/**/*"]
}
